def  menu_gestion_reservas():
    opc = -1
    while opc != 3:
        mostrar_menu_reservas()
        opc = validar_entero()
        os.system('cls' if os.name == 'nt' else 'clear')
        while opc < 1 or opc > 3:
            print("âš ï¸   OpciÃ³n no vÃ¡lida. IntÃ©ntelo nuevamente.\n")
            mostrar_menu_reservas()
            opc = validar_entero()
            os.system('cls' if os.name == 'nt' else 'clear')
        match opc: 
            case 1:
                en_construccion()
            case 2:
                en_construccion()
            case 3:
                volver()
    os.system('cls' if os.name == 'nt' else 'clear')

